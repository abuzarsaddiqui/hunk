<body>
    <div class="loader">
        <div class="spinner">
            @*<div class="double-bounce1"></div>
                <div class="double-bounce2"></div>*@
        </div>
    </div>

   @Html.Partial("_regheader")
    <div class="main-container">
        <section class="no-pad login-page fullscreen-element">

            <div class="background-image-holder">
                <img class="background-image" alt="Poster Image For Mobiles" src="~/img/hero6a.jpg">
            </div>

            <div class="container align-vertical">
                <div class="row">
                    <!--<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 text-center">-->
                    <br />
                    <br />
                    <br />
                    <!--<div class="photo-form-wrapper clearfix">-->
                    <br><br><br><br><br><br><br>
                    <h5>Edit your Project</h5>
                    <div class="form-wrapper clearfix">
                        <form class="form-contact email-form" action="../../Home/editproject/@Model.P_Id" enctype="multipart/form-data" method="post">
                            <input class="form-email" name="name" type="text" value="@Model.P_Name">
                            <div class="inputs-wrapper">
                                <textarea class="form-message validate-required" name="intro"   data-variant-option-mrv='{"buttonText":"Edit Placeholder Text","modalTitle":"Edit Placeholder Text","modalIntro":"Enter text you want the user to see when field is empty.","modalInputLabel":"Placeholder text:","selector":"textarea","attribute":"placeholder","refresh":"false"}'>@Model.P_Intro</textarea>
                            </div>
                            <div class="inputs-wrapper">
                                <textarea class="form-message validate-required" name="body" data-variant-option-mrv='{"buttonText":"Edit Placeholder Text","modalTitle":"Edit Placeholder Text","modalIntro":"Enter text you want the user to see when field is empty.","modalInputLabel":"Placeholder text:","selector":"textarea","attribute":"placeholder","refresh":"false"}'>@Model.P_Sol</textarea>
                            </div>
                            <div class="inputs-wrapper">
                                <textarea class="form-message validate-required" name="conclu" data-variant-option-mrv='{"buttonText":"Edit Placeholder Text","modalTitle":"Edit Placeholder Text","modalIntro":"Enter text you want the user to see when field is empty.","modalInputLabel":"Placeholder text:","selector":"textarea","attribute":"placeholder","refresh":"false"}'>@Model.P_Result</textarea>
                            </div>
                            <br />
                            
                            <input type="submit" class="send-form" value="Edit Project">

                        </form>
                    </div>
                </div>

            </div>
        </section><!--end of photo form wrapper-->
        <!--</div>
        </div><!--end of row-->
    </div><!--end of container-->


