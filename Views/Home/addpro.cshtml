<html class="no-js">
 <!--<![endif]-->
<head>
    <meta charset="utf-8">

    <title>ProjectVault | Add Project</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="~/Content/flexslider.min.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/line-icons.min.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/elegant-icons.min.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/lightbox.min.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/theme-aspirin.css" rel="stylesheet" type="text/css" media="all" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,400,300,600,700%7CRaleway:700' rel='stylesheet' type='text/css'>
    <script src="~/Scripts/modernizr-2.6.2-respond-1.1.0.min.js"></script>
</head>
<body>
    <div class="loader">
        <div class="spinner">
            @*<div class="double-bounce1"></div>
                <div class="double-bounce2"></div>*@
        </div>
    </div>

    <div class="nav-container">
        <nav class="top-bar overlay-bar">
            <div class="container">

                <div class="row utility-menu">
                    <div class="col-sm-12">
                        <div class="utility-inner clearfix">


                            <div class="pull-right">
                            @{
                                int id = Convert.ToInt32(Session["uid"]);
                                string name = "";
                                var obj = from i in db.Users
                                          where i.U_Id == id
                                          select i;

                                foreach (var f in obj)
                                {
                                    name = f.U_Name;
                                }
                                <a href="~/Home/editinfo/@id" class="btn btn-primary btn-white btn-xs">@name</a>
                                <a href="~/Home/logout" class=" btn btn-primary login-button btn-xs">Logout</a>
                            }
                            </div>
                        </div>
                    </div>
                </div><!--end of row-->


                <div class="row nav-menu">
                    <div class="col-sm-3 col-md-2 columns">
                        <a href="~/Home/home">
                            <img class="logo logo-light" alt="Logo" src="~/img/logo-light.png">
                            <img class="logo logo-dark" alt="Logo" src="~/img/logo-light.png">
                        </a>
                    </div>
                    @{
    int id1 = 1, id2 = 2, id3 = 3, id4 = 4, id5 = 5;
                     }
                    <div class="col-sm-9 col-md-10 columns">
                        <ul class="menu">
                            <li><a href="~/Home/home"><font size="4">Home</font></a></li>

                            <li class="has-dropdown">
                                <a href="#"><font size="4">Projects</font></a>
                                <ul class="subnav">
                                    <li><a href="~/Home/project/@id1">Desktop apps</a></li>
                                    <li><a href="~/Home/project/@id2">Websites</a></li>
                                    <li><a href="~/Home/project/@id3">Mechanical</a></li>
                                    <li><a href="~/Home/project/@id4">Chemical</a></li>
                                    <li><a href="~/Home/project/@id5">Fashion Desiging</a></li>
                                </ul>
                            </li>
                            <li><a href="~/Home/addpro"><font size="4">Add project</font></a></li>
                            <li><a href="~/Home/myproject"><font size="4">My Projects</font></a></li>
                            <li><a href="~/Home/contact"><font size="4">Contact</font></a></li>
                        </ul>
                    </div>
                </div><!--end of row-->

                <div class="mobile-toggle">
                    <i class="icon icon_menu"></i>
                </div>

            </div><!--end of container-->
        </nav>
    </div>
    <div class="main-container">
        <section class="no-pad login-page fullscreen-element">

            <div class="background-image-holder">
                <img class="background-image" alt="Poster Image For Mobiles" src="~/img/hero6a.jpg">
            </div>

            <div class="container align-vertical">
                <div class="row">
                    <!--<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 text-center">-->
                    <br />
                    <br />
                    <br />
                    <!--<div class="photo-form-wrapper clearfix">-->
                    <br><br><br><br><br><br><br>
                    <h5>Add your Project</h5>
                    <div class="form-wrapper clearfix">
                        <form class="form-contact email-form" action="../../Home/muproject" enctype="multipart/form-data" method="post">
                            <input class="form-email" name="name" type="text" placeholder="Name" required>
                            <div class="inputs-wrapper">
                                <textarea class="form-message validate-required" name="intro" placeholder="Initial Problem" required data-variant-option-mrv='{"buttonText":"Edit Placeholder Text","modalTitle":"Edit Placeholder Text","modalIntro":"Enter text you want the user to see when field is empty.","modalInputLabel":"Placeholder text:","selector":"textarea","attribute":"placeholder","refresh":"false"}'></textarea>
                            </div>
                            <div class="inputs-wrapper">
                                <textarea class="form-message validate-required" name="body" placeholder="Solution" required data-variant-option-mrv='{"buttonText":"Edit Placeholder Text","modalTitle":"Edit Placeholder Text","modalIntro":"Enter text you want the user to see when field is empty.","modalInputLabel":"Placeholder text:","selector":"textarea","attribute":"placeholder","refresh":"false"}'></textarea>
                            </div>
                            <div class="inputs-wrapper">
                                <textarea class="form-message validate-required" name="conclu" placeholder="Results" required data-variant-option-mrv='{"buttonText":"Edit Placeholder Text","modalTitle":"Edit Placeholder Text","modalIntro":"Enter text you want the user to see when field is empty.","modalInputLabel":"Placeholder text:","selector":"textarea","attribute":"placeholder","refresh":"false"}'></textarea>
                            </div><input type="file" name="image" required/>
                            <input type="file" name="image1" required />
                            <br />
                            <input class="form-email" type="radio" name="type" value="desktop" checked>Desktop Application
                            <input class="form-email" type="radio" name="type" value="web">Website
                            <input class="form-email" type="radio" name="type" value="mcp">Machenical Project
                            <input class="form-email" type="radio" name="type" value="chp">Chemical project
                            <input class="form-email" type="radio" name="type" value="fp">Fashion Project
                            <br /><br />
                            <input type="submit" class="send-form" value="Add Project">

                        </form>
                    </div>
                </div>

            </div></section><!--end of photo form wrapper-->
            <!--</div>
            </div><!--end of row-->
    </div><!--end of container-->
    
    
    <div class="footer-container"></div>

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery.plugin.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.flexslider-min.js"></script>
    <script src="~/Scripts/smooth-scroll.min.js"></script>
    <script src="~/Scripts/skrollr.min.js"></script>
    <script src="~/Scripts/spectragram.min.js"></script>
    <script src="~/Scripts/scrollReveal.min.js"></script>
    <script src="~/Scripts/isotope.min.js"></script>
    <script src="~/Scripts/twitterFetcher_v10_min.js"></script>
    <script src="~/Scripts/lightbox.min.js"></script>
    <script src="~/Scripts/jquery.countdown.min.js"></script>
    <script src="~/Scripts/scripts.js"></script>
</body>
</html>
