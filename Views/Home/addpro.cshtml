@using Projecthunk.Models
@{
    Database1Entities db = new Database1Entities();
    ViewBag.Title = "ProjectHunk | Add Project";
}
<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
